@model System.Web.Mvc.HandleErrorInfo
<div class="jumbotron">
	<h1>An error has occurred </h1>
	<p>The inventory system encountered a problem processing your request.</p>
</div>


<h2></h2>
<h3>@Html.ValidationSummary()</h3>

@if (Model != null)
{
	<div class="panel panel-danger">
		<div class="panel-heading">
			<h3 class="panel-title">Exception: @Model.Exception.GetType().ToString()</h3>
		</div>
		<div class="panel-body">
			<samp>@Model.Exception.Message</samp>
</div>
	</div>
}
