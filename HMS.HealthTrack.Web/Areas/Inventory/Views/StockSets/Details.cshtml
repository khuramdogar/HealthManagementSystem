@using HMS.HealthTrack.Web.Areas.Inventory.Models.Shared
@model HMS.HealthTrack.Web.Data.Model.Inventory.StockSet

@{
    ViewBag.Title = "Details";
}

<h2>Stock Set Details</h2>

<div>
   <hr />
   <dl class="dl-horizontal">
      <dt>
         @Html.DisplayNameFor(model => model.Name)
      </dt>

      <dd>
         @Html.DisplayFor(model => model.Name)
      </dd>

   </dl>
</div>

<div class="row">

	<table id="MasterDetails" class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>ID</th>
				<th>LPC</th>
				<th>UPN</th>
				<th>Description</th>
				<th>Quantity</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Items)
			{
				<tr>
					<td>@item.ProductId</td>
               <td>@item.Product.ProductId</td>
               <td>@item.Product.LPC</td>
               <td>@item.Product.Description</td>
					<td>@item.Quantity</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<hr/>
<div class="row">
   <a class="k-button" href="@Url.Action("Index")">Back to list</a>
   <a class="k-button k-primary" href="@Url.Action("Edit", "StockSets", new { id = Model.StockSetId })">Edit</a>
</div>
