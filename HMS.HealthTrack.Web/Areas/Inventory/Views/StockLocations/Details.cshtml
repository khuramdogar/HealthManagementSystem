@using HMS.HealthTrack.Web.Areas.Inventory.Models.Shared
@using Kendo.Mvc.UI
@model HMS.HealthTrack.Web.Areas.Inventory.Models.StockLocations.StockLocationViewModel

@{
   ViewBag.Title = "Details";
}

<div class="row">
   <div class="col-xs-2 col-md-2 logo-big">
      <img src="~/Content/images/Icons/72x72/Shopping Center.png" class="img-responsive" />
   </div>
   <div class="col-xs-6 col-md-6 col-lg-10 content-title">
      <div class="row">
         <div class="col-sm-12">
            <h2>Stock location details</h2>
         </div>
      </div>
   </div>
</div>

<div class="row">
   <div class="col-sm-6">
      <img src="~/api/Inventory/Logos/@Model.LocationId" onerror=" this.onerror = null; this.src = ''; " alt="" id="Logo" class="img-responsive"/>
   </div>
</div>
<br />
   
<div>
   @(Html.Kendo().TabStrip()
        .Name("tabstrip")
        .Items(tabstrip =>
        {
           tabstrip.Add().Text("Details").Selected(true)
              .Content(@<text>
                           <br/>
                           <dl class="dl-horizontal">
                              <dt>
                                 @Html.DisplayNameFor(model => model.Name)
                              </dt>

                              <dd>
                                 @Html.DisplayFor(model => model.Name)
                              </dd>

                              <dt>
                                 @Html.DisplayNameFor(model => model.Address.Address1)
                              </dt>

                              <dd>
                                 @Html.DisplayFor(model => model.Address.Address1)
                              </dd>

                              <dt>
                                 @Html.DisplayNameFor(model => model.Address.Address2)
                              </dt>

                              <dd>
                                 @Html.DisplayFor(model => model.Address.Address2)
                              </dd>

                              <dt>
                                 @Html.DisplayNameFor(model => model.Address.Suburb)
                              </dt>

                              <dd>
                                 @Html.DisplayFor(model => model.Address.Suburb)
                              </dd>

                              <dt>
                                 @Html.DisplayNameFor(model => model.Address.State)
                              </dt>

                              <dd>
                                 @Html.DisplayFor(model => model.Address.State)
                              </dd>

                              <dt>
                                 @Html.DisplayNameFor(model => model.Address.PostCode)
                              </dt>

                              <dd>
                                 @Html.DisplayFor(model => model.Address.PostCode)
                              </dd>

                              <dt>
                                 @Html.DisplayNameFor(model => model.Address.Country)
                              </dt>

                              <dd>
                                 @Html.DisplayFor(model => model.Address.Country)
                              </dd>
                              
                              <dt>
                                 @Html.DisplayNameFor(model => model.HealthTrackLocationNames)
                              </dt>
                              <dd>
                                 @Html.DisplayFor(model => model.HealthTrackLocationNames)
                              </dd>
                           </dl>
                        </text>);
           tabstrip.Add().Text("History")
              .Content(@<text>
                           <br />
                              
                           <dl class="dl-horizontal">
                              <dt>
                                 @Html.DisplayNameFor(model => model.CreatedBy)
                              </dt>

                              <dd>
                                 @Html.DisplayFor(model => model.CreatedBy)
                              </dd>

                              <dt>
                                 @Html.DisplayNameFor(model => model.CreatedOn)
                              </dt>

                              <dd>
                                 @Html.DisplayFor(model => model.CreatedOn)
                              </dd>
                                 
                              <dt>
                                 @Html.DisplayNameFor(model => model.LastModifiedUser)
                              </dt>
                              <dd>
                                 @Html.DisplayFor(model => model.LastModifiedUser)
                              </dd>

                              <dt>
                                 @Html.DisplayNameFor(model => model.LastModifiedOn)
                              </dt>

                              <dd>
                                 @Html.DisplayFor(model => model.LastModifiedOn)
                              </dd>

                           </dl>
                        </text>);
        }))
</div>
<div class="row" style="padding-top:1em;">
   <div class="col-sm-12">
      <a class="k-button" href="@Url.Action("Index")">Back to list</a>
      <a class="k-button" id="Delete">Delete</a>
      <a class="k-button k-primary" href="@Url.Action("Edit", "StockLocations", new { id = Model.LocationId })">Edit</a>   
   </div>
</div>

@{
   Html.RenderPartial("_DeletePrompt", new DeletePromptModel
   {
      Controller = "StockLocations",
      Description = Model.Name,
      Id = Model.LocationId
   });
}