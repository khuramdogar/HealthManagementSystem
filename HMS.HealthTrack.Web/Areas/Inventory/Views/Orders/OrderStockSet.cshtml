@using HMS.HealthTrack.Web.Data.Model.Inventory
@model HMS.HealthTrack.Web.Areas.Inventory.Models.Orders.OrderQuickAdd

@{
    ViewBag.Title = "Order stock set";
}


<h3>Create an order from a stock set</h3>
<div>
   @if (Model.AvailableStockSets != null && Model.AvailableStockSets.Any())
   {
      using (Html.BeginForm("OrderStockSet", "Orders", FormMethod.Post))
      {
         @Html.AntiForgeryToken()

         <div class="form-horizontal">
            <div class="row">
               @Html.ValidationSummary(true, "", new { @class = "text-danger" })
               <div class="form-group">
                  @Html.Label("Select a stock set", new { @class = "control-label col-md-2" })
                  <div class="col-md-3">
                     <select id="StockSetId" name="StockSetId" class="form-control" title="Select a stock set" required>
                        <option value="">--- Select a set ---</option>
                        @foreach (StockSet stockSet in Model.AvailableStockSets)
                        {
                           <option value="@stockSet.StockSetId">@stockSet.Name</option>
                        }
                     </select>
                  </div>
                  <div class="col-md-1">
                     <input type="submit" value="Create" class="btn btn-default" />
                  </div>
               </div>
            </div>
         </div>
      }
   }
</div>

